<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= lostPet.nickName %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/lostPets/<%= lostPet._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="lostPet[nickName]" value="<%= lostPet.nickName %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lostPet[image]" value="<%= lostPet.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lostPet[address]" value="<%= lostPet.address %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lostPet[city]" value="<%= lostPet.city %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lostPet[state]" value="<%= lostPet.state %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lostPet[zip]" value="<%= lostPet.zip %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lostPet[description]" value="<%= lostPet.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/lostPets">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

