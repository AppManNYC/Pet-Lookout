<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Pet Lookout</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= lostPet.image %>">
                <div class="caption-full">
                    <h4 class="pull-right"><%= lostPet.city %>, <%= lostPet.state %></h4>
                    <h4>Address: <a><%= lostPet.address %></a></h4>
                    <p><%= lostPet.zip %></p>
                    <p><%= lostPet.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/lostPets/<%= lostPet._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% lostPet.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>